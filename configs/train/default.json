{
    "stage": {
        "name": "baseline"
    },
    "model_path": "google/codegemma-2b",
    "output_dir": "sft_output",
    "dataset": {
        "train_path": "train.json",
        "val_path": "valid_8.json"
    },
    "lora_args": {
        "rank_dimension": 16,
        "lora_alpha": 32,
        "lora_dropout": 0.05,
        "bias": "none",
        "target_modules": "all-linear"
    },
    "training_args": {
        "max_steps": -1,
        "num_train_epochs": 1,
        "per_device_train_batch_size": 8,
        "bf16": true,
        "learning_rate": 5e-5,
        "logging_steps": 50,
        "logging_first_step": true,
        "save_strategy": "epoch",
        "save_steps": 500,
        "eval_strategy": "steps",
        "eval_delay": 0,
        "eval_steps": 50
    }
}
